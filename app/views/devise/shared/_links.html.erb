<div class="mt-6">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Log in", new_session_path(resource_name), class: "block text-blue-600 hover:text-blue-500 font-medium mb-2" %>
  <%- end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "block text-blue-600 hover:text-blue-500 font-medium mb-2" %>
  <%- end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "block text-blue-600 hover:text-blue-500 font-medium mb-2" %>
  <%- end %>
</div>
