<div class="max-w-lg mx-auto bg-white shadow-lg rounded-lg p-8 border border-gray-300 mb-6">
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-2xl font-bold">Edit <%= resource_name.to_s.humanize %></h2>
    
    <% if resource.profile_image.attached? %>
      <div class="ml-4">
        <%= image_tag resource.profile_image, class: "h-16 w-16 rounded-full border border-gray-300" %>
      </div>
    <% end %>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4 flex space-x-4">
      <div class="flex-1">
        <%= f.input :name_surname, required: true, label: "Name Surname", input_html: { class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" } %>
      </div>
      <div class="flex-1">
        <%= f.input :gsm, required: true, label: "GSM", input_html: { class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" } %>
      </div>
    </div>

    <div class="mb-4 flex space-x-4">
      <div class="flex-1">
        <%= f.input :date_of_birth, required: true, label: "Date of Birth", html5: true, input_html: { class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" } %>
      </div>
      <div class="flex-1">
        <%= f.input :email, required: true, label: "Email", autofocus: true, autocomplete: "email", input_html: { class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" } %>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="mb-4 text-yellow-600">
        Currently waiting confirmation for: <%= resource.unconfirmed_email %>
      </div>
    <% end %>

    <div class="mb-4 flex space-x-4">
      <div class="flex-1">
        <%= f.input :password, autocomplete: "new-password", input_html: { class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" } %>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-500">(minimum <%= @minimum_password_length %> characters)</em>
        <% end %>
      </div>
      <div class="flex-1">
        <%= f.input :password_confirmation, label: "Password Confirmation", input_html: { class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" } %>
      </div>
    </div>

    <div class="mb-4 flex space-x-4">
      <div class="flex-1">
        <%= f.input :current_password, required: true, autocomplete: "current-password", input_html: { class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" } %>
      </div>

      <div class="flex-1">
        <%= f.input :profile_image, as: :file, label: "Profile Image", input_html: { accept: 'image/jpeg,image/png,image/jpg', class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" } %>
      </div>
    </div>

    <div class="mt-6">
      <%= f.submit "Update", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200" %>
    </div>
  <% end %>

  <div class="mt-4">
    <div>
      Unhappy? 
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "text-red-600 hover:text-red-900" %>
    </div>
  </div>
</div>
