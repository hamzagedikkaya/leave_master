.max-w-md.mx-auto.bg-white.shadow-lg.rounded-lg.p-6.sm:p-8.border.border-gray-300
  %h2.text-3xl.font-bold.text-center.mb-8.text-gray-800= t('views.registrations.new.sign_up_button')
  = simple_form_for resource, as: :user, url: registration_path(resource_name) do |f|
    = render "devise/shared/error_messages", resource: resource
    .mb-4.flex.space-x-4
      .flex-1
        = f.input :name_surname, required: true, label: t('views.registrations.new.name_surname'), input_html: { class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" }
      .flex-1
        = f.input :gsm, required: true, label: t('views.registrations.new.gsm'), input_html: { class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" }
    .mb-4.flex.space-x-4
      .flex-1
        = f.input :email, required: true, label: t('views.registrations.new.email'), autocomplete: "email", input_html: { class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" }
      .flex-1
        = f.input :date_of_birth, required: true, label: t('views.registrations.new.date_of_birth'), html5: true, input_html: { class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" }
    .mb-4.flex.space-x-4
      .flex-1
        = f.input :password, required: true, label: t('views.registrations.new.password'), autocomplete: "new-password", input_html: { class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" }
        - if @minimum_password_length
          %em.text-sm.text-gray-500
            (minimum #{@minimum_password_length} characters)
      .flex-1
        = f.input :password_confirmation, required: true, label: t('views.registrations.new.password_confirmation'), autocomplete: "new-password", input_html: { class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" }
    .mt-6
      = f.submit t('views.registrations.new.sign_up_button'), class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200"
